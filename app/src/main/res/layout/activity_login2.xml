<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <RelativeLayout

        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="500dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="26dp"
                android:background="@drawable/ic_login_circle_background2">
            </ImageView>

            <ImageView
                android:layout_width="180dp"
                android:layout_height="140dp"
                android:layout_marginTop="100dp"
                android:layout_marginStart="26dp"
                android:background="@drawable/ic_login_people_background"></ImageView>

        </FrameLayout>


        <TextView
            android:id="@+id/sign_in_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="300dp"
            android:textAlignment="textStart"
            android:fontFamily="@font/open_sans_regular"
            android:text="@string/sign_in_into_your_account_text"
            android:paddingStart="26dp"
            android:paddingEnd="26dp"
            android:textColor="#002D3F"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="400dp"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <EditText
                android:id="@+id/email_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/login_create_editfield_shape"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="26dp"
                android:layout_marginEnd="26dp"
                android:paddingStart="20dp"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:hint="EMAIL"
                android:textSize="18sp"
                android:alpha="0.9"
                android:fontFamily="@font/open_sans_regular">
            </EditText>


            <EditText
                android:id="@+id/password_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/login_create_editfield_shape"
                android:layout_marginStart="26dp"
                android:layout_marginEnd="26dp"
                android:paddingStart="20dp"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:hint="PASSWORD"
                android:textSize="18sp"
                android:alpha="0.9"
                android:fontFamily="@font/open_sans_regular">

            </EditText>

            <TextView
                android:id="@+id/continue_as_guest_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:paddingTop="10dp"
                android:onClick="signInAsGuest"
                android:paddingBottom="10dp"
                android:text="@string/guestText"
                android:textColor="#002D3F" />

        </LinearLayout>


        <ProgressBar
            android:id="@+id/progressBar"
            android:indeterminate="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="150dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            style="?android:attr/progressBarStyleHorizontal"/>

        <Button
            android:id="@+id/login_button"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/start_button_shape"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:layout_marginBottom="56dp"
            android:onClick="logInToLimbitless"
            android:text="Login"
            android:textAllCaps="false"
            android:fontFamily="@font/open_sans_semibold"
            android:textSize="25sp"
            android:textAlignment="gravity"
            android:textColor="#FFFFFF"/>

        <TextView
            android:id="@+id/create_account_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="28dp"
            android:paddingStart="26dp"
            android:paddingEnd="26dp"
            android:alpha="0.7"
            android:text="@string/new_account_text"
            android:fontFamily="@font/lato_regular"
            android:textColor="#002D3F"
            android:textSize="15sp" />






    </RelativeLayout>

</android.support.constraint.ConstraintLayout>