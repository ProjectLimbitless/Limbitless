<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#235B99"
    tools:context=".CameraActivity">

    <com.example.limbitlesssummerproject19.AutoFitTextureView
        android:id="@+id/texture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        android:layout_alignParentLeft="true" />

    <View
        android:id="@+id/RectangleWithBorders"
        android:layout_width="300dp"
        android:layout_height="450dp"
        android:background="@drawable/rectangle_transparent"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/texture"
        app:layout_constraintEnd_toEndOf="@+id/texture"
        app:layout_constraintStart_toStartOf="@+id/texture"
        app:layout_constraintTop_toTopOf="@+id/texture" />

    <View
        android:id="@+id/leftView"
        android:background="@drawable/rectangle"
        android:layout_height="0dp"
        android:layout_width="@+id/RectangleWithBorders"
        android:layout_margin="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/RectangleWithBorders"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/RectangleWithBorders"

        />

    <View
        android:id="@+id/rightView"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        android:layout_width="@+id/RectangleWithBorders"
        android:background="@drawable/rectangle"
        app:layout_constraintStart_toEndOf="@+id/RectangleWithBorders"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/RectangleWithBorders"
        />

    <View
        android:id="@+id/topView"
        android:layout_width="@+id/RectangleWithBorders"
        android:layout_height="@+id/RectangleWithBorders"
        android:layout_margin="0dp"
        android:maxHeight="@+id/RectangleWithBorders"
        android:background="@drawable/rectangle"
        app:layout_constraintBottom_toTopOf="@id/RectangleWithBorders"
        app:layout_constraintEnd_toStartOf="@id/rightView"
        app:layout_constraintStart_toEndOf="@id/leftView"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/bottomView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        android:background="@drawable/rectangle"
        app:layout_constraintBottom_toBottomOf="@id/texture"
        app:layout_constraintEnd_toStartOf="@id/rightView"
        app:layout_constraintStart_toEndOf="@id/leftView"
        app:layout_constraintTop_toBottomOf="@id/RectangleWithBorders" />

    <FrameLayout
        android:id="@+id/button_container"
        android:layout_width="@+id/RectangleWithBorders"
        android:layout_height="@+id/RectangleWithBorders"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/RectangleWithBorders"
        app:layout_constraintEnd_toStartOf="@id/rightView"
        app:layout_constraintStart_toEndOf="@id/leftView"
        >

        <Button
            android:id="@+id/button_capture"
            android:layout_width="@android:dimen/app_icon_size"
            android:layout_height="@android:dimen/app_icon_size"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginStart="180dp"
            android:layout_marginLeft="0dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="180dp"
            android:background="@drawable/take_button" />

    </FrameLayout>

</android.support.constraint.ConstraintLayout>

