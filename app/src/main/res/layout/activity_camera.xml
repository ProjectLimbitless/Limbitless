<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context=".CameraActivity">

    <com.example.limbitlesssummerproject19.AutoFitTextureView
        android:id="@+id/texture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"

        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <View
        android:id="@+id/RectangleWithBorders"
        android:layout_width="250dp"
        android:layout_height="375dp"
        android:background="@drawable/rectangle_transparent"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/bottomView"
        app:layout_constraintEnd_toStartOf="@+id/rightView"
        app:layout_constraintStart_toEndOf="@+id/leftView"
        app:layout_constraintTop_toBottomOf="@+id/topView" />

    <View
        android:id="@+id/leftView"
        android:background="@drawable/rectangle"
        android:layout_height="0dp"
        android:layout_width="@+id/RectangleWithBorders"
        android:layout_margin="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/RectangleWithBorders"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/RectangleWithBorders"

        />

    <View
        android:id="@+id/rightView"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        android:layout_width="@+id/RectangleWithBorders"
        android:background="@drawable/rectangle"
        app:layout_constraintStart_toEndOf="@+id/RectangleWithBorders"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/RectangleWithBorders"
        />

    <View
        android:id="@+id/topView"
        android:layout_width="@+id/RectangleWithBorders"
        android:layout_height="@+id/RectangleWithBorders"
        android:layout_margin="0dp"
        android:maxHeight="@+id/RectangleWithBorders"
        android:background="@drawable/rectangle"
        app:layout_constraintBottom_toTopOf="@id/RectangleWithBorders"
        app:layout_constraintEnd_toStartOf="@id/rightView"
        app:layout_constraintStart_toEndOf="@id/leftView"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/bottomView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        android:background="@drawable/rectangle"
        app:layout_constraintBottom_toBottomOf="@id/texture"
        app:layout_constraintEnd_toStartOf="@id/rightView"
        app:layout_constraintStart_toEndOf="@id/leftView"
        app:layout_constraintTop_toBottomOf="@id/RectangleWithBorders" />

    <FrameLayout
        android:id="@+id/button_container"
        android:layout_width="@+id/RectangleWithBorders"
        android:layout_height="@+id/RectangleWithBorders"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/RectangleWithBorders"
        app:layout_constraintEnd_toStartOf="@id/rightView"
        app:layout_constraintStart_toEndOf="@id/leftView" >

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:layout_gravity="center">

            <ImageButton

                android:id="@+id/image_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_shape_button"
                android:layout_marginRight="10dp"

                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/button_capture"
                android:layout_toLeftOf="@+id/button_capture" />

            <ImageButton
                android:id="@+id/button_capture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/picture_button"
                android:layout_centerInParent="true" />

            <ImageButton
                android:id="@+id/return_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/circle_shape_button"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:layout_toEndOf="@+id/button_capture"
                android:layout_toRightOf="@+id/button_capture"

                 />

        </RelativeLayout>
    </FrameLayout>
    <!--#235B99-->
</android.support.constraint.ConstraintLayout>

